#!/bin/sh

while getopts "sd:" arg; do
    case ${arg} in
        s)
            SELECT=1
            ;;
        d)
            eval DIR="${OPTARG}"
            ;;
        ?)
        echo "invalid option: -${OPTARG}."
        exit 1
        ;;
    esac
done

if [ $SELECT ]; then
    read -r X Y W H G < <(slop -f "%x %y %w %h %g")
    maim "$DIR$(date +'%Y-%m-%d_%H:%M:%S')_${W}x${H}.png" -f png -u -g "$G"
else
    maim "$DIR$(date +'%Y-%m-%d_%H:%M:%S.png')" -f png -u
fi
