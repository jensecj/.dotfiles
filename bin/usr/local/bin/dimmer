#!/bin/sh

# https://www.stackabuse.com/handling-unix-signals-in-python/

dim() {
    redshift -P -O "$1" >> /dev/null
    rc=$?
    if [ $rc -eq 0 ]; then
        echo "setting screen temp to $DIM"
    else
        echo "failed to set screen temp"
    fi
}

DIMMER_FILE=~/.dimmer
TIMEOUT=300
SUNRISE=0600
SUNSET=2100

MAX=4800
MIN=1300

# TODO: use a curve based on time of day and date (number of sunlight hours?)
calculate_dim_value() {
    HOUR=$(date +%H)

    case $HOUR in
        00) DIM=$MIN;;
        01) DIM=$MIN;;
        02) DIM=$MIN;;
        03) DIM=$MIN;;
        04) DIM=$MIN;;
        05) DIM=$MIN;;
        06) DIM=$((MIN+2000));;
        07) DIM=$((MIN+2800));;
        08) DIM=$((MIN+2800));;
        09) DIM=$((MIN+3000));;
        10) DIM=$((MIN+3500));;
        11) DIM=$((MIN+3700));;
        12) DIM=$MAX;;
        13) DIM=$MAX;;
        14) DIM=$MAX;;
        15) DIM=$MAX;;
        16) DIM=$MAX;;
        17) DIM=$((MAX-500));;
        18) DIM=$((MAX-1000));;
        19) DIM=$((MAX-1400));;
        20) DIM=$((MAX-1700));;
        21) DIM=$((MAX-2000));;
        22) DIM=$((MAX-2900));;
        23) DIM=$MIN;;
    esac
}

if [ ! -e $DIMMER_FILE ]; then
    touch $DIMMER_FILE
fi

# run as daemon if told to
if [ "$1" = "daemon" ]; then
    LAST_DIM=0
    while true; do
        DIM=0

        # grab value from file if it is saved
        if [ -s $DIMMER_FILE ]; then
            DIM=$(cat $DIMMER_FILE)
        fi

        # otherwise, calculate new screen temperature
        if [ $DIM -eq 0 ]; then
            calculate_dim_value
        fi

        # only dim if it changes the screen temperature
        if [ ! $DIM -eq $LAST_DIM ]; then
            dim "$DIM"
            LAST_DIM=$DIM
        fi

        sleep $TIMEOUT;
    done
    exit
fi

# parse args and update $DIMMER_FILE
if [ "$1" = "cls" ]; then
    rm $DIMMER_FILE
elif [ "$1" = "ls" ]; then
    cat $DIMMER_FILE
    exit 0
elif [ -n "$1" ]; then
    echo "$1" > $DIMMER_FILE
fi

# grab dimming value from $DIMMER_FILE
if [ -s $DIMMER_FILE ]; then
    DIM=$(cat $DIMMER_FILE)
fi

# if $DIMMER_FILE is unused, calculate dimming value
if [ -z $DIM ]; then
    calculate_dim_value
fi

if [ -n "$DIM" ]; then
    dim "$DIM"
    exit $rc
fi
