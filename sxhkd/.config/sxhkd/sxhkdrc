# BRIGHTNESS
XF86MonBrightnessUp
    backlightctl amdgpu_bl0 5%+

shift + XF86MonBrightnessUp
    backlightctl amdgpu_bl0 1%+

XF86MonBrightnessDown
    backlightctl amdgpu_bl0 5%-

shift + XF86MonBrightnessDown
    backlightctl amdgpu_bl0 1%-

ctrl + XF86MonBrightnessUp
    backlightctl ddcci5 5%+

ctrl + XF86MonBrightnessDown
    backlightctl ddcci5 5%-

# AUDIO
XF86AudioRaiseVolume
    volumectl +2%

XF86AudioLowerVolume
    volumectl -2%

XF86AudioMute
    volumectl toggle

# SHORTCUTS

super + l
    slock

@super + Print
    scrshot -d "~/private/screenshots/"

@super + shift + Print
    scrshot -s -d "~/private/screenshots/"

super + Return
    $TERMINAL -e tmux

super + shift + Return
    $TERMINAL

super + ctrl + Return
    popterm tmux

super + m
    $TERMINAL -e tmux -c ranger

super + p
    $TERMINAL -e 'htop'

super + BackSpace
    $BROWSER

super + Delete
    $EDITOR

super + shift + b
    em '~/vault/org/bookmarks.org' -

super + Home
    em "~/vault/inbox/today.org" -

super + d
    rofi -show run

super + shift + d
    define "$(xsel -o)"

super + y
    myt $(xsel -o) -

ctrl + super + y
    myt $(xsel -o)

super + shift + g
    autorandr -c && sleep .2 && dimmer

super + shift + p
    polybar-setup; xob-setup; notify-send 'Restarted polybar/xob'


