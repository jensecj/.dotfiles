#!/bin/bash
BUILD_DIR=$(pwd)/build

(
    cd emacs/ || exit 2

    time ./configure \
         --prefix="$BUILD_DIR" \
         --exec-prefix="$BUILD_DIR" \
         --without-sound \
         --with-cairo \
         --with-harfbuzz \
         --with-native-compilation \
         --with-modules \
         --with-pdumper=yes \
         --with-imagemagick \
         --with-json \
         --without-pop \
         --without-mailutils

    printf "======================"
    printf "\n%s\n" "configuration complete"
    printf "======================"
)
